{
  "compilerOptions": {
    "rootDirs": ["src"],

    "outDir": "dist",

    "lib": ["es2020"],

    "target": "es2020",

    "module": "esnext",

    "moduleResolution": "node",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    
    "skipLibCheck": true,
    
    "types": ["node"]
  },
  "include": ["./src"]
}
